      for (var i = 0, len = e.data.length; i < len; ++i) {
        if ( e.data[i] === 'moment' ) {
          YUI.add('moment', function (Y){
            Y.moment = moment;
          });
        } else if ( e.data[i] === 'three' ) {
          YUI.add('three', function (Y) {
            Y.THREE = THREE;
          });
        }
      }
    }
}).use('moment', 'three', 'node', function (Y) {
  
